!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "GeoGameRails"
    = csrf_meta_tags
    / HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"

    = stylesheet_link_tag "//cdn.leafletjs.com/leaflet-0.5/leaflet.css"
    /[if lte IE 8]
      = stylesheet_link_tag "//cdn.leafletjs.com/leaflet-0.5/leaflet.ie.css"


    = stylesheet_link_tag "application", :media => "all"
    %link(href="favicon.ico" rel="shortcut icon")


  %body
    .navbar.navbar-fluid-top
      .navbar-inner
        .container-fluid
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") GeoGameRails
          .container.nav-collapse
            %ul.nav.pull-right
              %li= link_to "Get Started", "/start"
              %li= link_to "Scoring", "/scoring"
              %li= link_to "Leaderboard", "/leaderboard"
              %li= link_to "About", "/about"

    .container-fluid
      = bootstrap_flash
      = yield
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
    = content_for :javascripts
